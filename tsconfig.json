{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2019",
      "ES2020"
    ],
    "allowJs": true,
    "outDir": "lib/esm",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
